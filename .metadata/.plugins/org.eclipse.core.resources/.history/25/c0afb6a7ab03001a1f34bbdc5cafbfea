package stack_study;

import java.util.Scanner;
import java.util.Stack;

public class b_1874 {

	public static void main(String[] args) {

		Scanner scan = new Scanner(System.in);
		int cnt = scan.nextInt();
		Stack<Integer> stack = new Stack<>();
		int max = 0;
		for (int i = 0; i < cnt; i++) {
			int n = scan.nextInt();

			if (i == 0) {
				for (int j = 1; j <= n; j++) {
					stack.push(j);
					System.out.println("+");
				}
				max = n;
				stack.pop();
				System.out.println("-");
			} else {
				if (stack.peek() <= n) {
					stack.pop();
					System.out.println("-");
				} else {
					for (int k = max; k < n; k++) {
						stack.push(k + 1);
						System.out.println("+");
					}
					max = n;
					stack.pop();
					System.out.println("-");
				}
			}
		}
	}

}
